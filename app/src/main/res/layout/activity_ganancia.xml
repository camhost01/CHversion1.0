<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bt_escanarr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ganancia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="middle"
                android:padding="10dp"
                android:text="A continuacion encontraras tu Stock actual"
                android:textAlignment="inherit"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                app:fontFamily="sans-serif-condensed" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lv_DatosDB"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:background="#E1E3F1">

                </ListView>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Revisa los valores invertidos desde una fecha específica, por tipo de producto y desde el inicio de tu negocio"
                    android:textAlignment="inherit"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chb_xfecha"
                        android:layout_width="113dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/chb_fecha" />

                    <CheckBox
                        android:id="@+id/chb_xproducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/chb_prod" />

                    <CheckBox
                        android:id="@+id/chb_Totales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/chb_total" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnano"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Escribe el año" />

                    <EditText
                        android:id="@+id/et_ano"
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="YYYY"
                        android:inputType="date"
                        android:maxLength="4" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnmes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_mes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Selecciona el Mes" />

                    <Spinner
                        android:id="@+id/SPmonth"
                        android:layout_width="122dp"
                        android:layout_height="46dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_cod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/bt_scanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_camera" />

                    <EditText
                        android:id="@+id/et_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/txt_codigo"
                        android:inputType="textPersonName"
                        android:maxLength="18" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lninvertido"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Invertido" />

                    <EditText
                        android:id="@+id/et_TotalInv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnganado"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Obtenido" />

                    <EditText
                        android:id="@+id/et_TotalGanado"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_xfecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fecha" />

                    <Button
                        android:id="@+id/bt_xprod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Producto"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bt_totales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Totales"
                        android:visibility="gone" />

                </LinearLayout>

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:adSize="LARGE_BANNER"
                    app:adUnitId="ca-app-pub-8242256510253784/8404749844"></com.google.android.gms.ads.AdView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>